#include "pwm.h"
#include "car.h"
#include "drivers/mss_uart/mss_uart.h"
#include <stdio.h>
#include <inttypes.h>

#define MAX_COUNT 200000000

uint8_t rx_buff[6];

void uart1_rx_handler( mss_uart_instance_t * this_uart )
{
   MSS_UART_get_rx( this_uart, rx_buff, sizeof(rx_buff));
   //MSS_UART_polled_tx_string(&g_mss_uart1, rx_buff); //for testing if the xbee is working
}

int main()
{
	int i;
	for(i = 0; i < 6; i++) {
		rx_buff[i] = 128;
	}

    //MSS_UART_init(&g_mss_uart1, MSS_UART_57600_BAUD, MSS_UART_DATA_8_BITS | MSS_UART_NO_PARITY | MSS_UART_ONE_STOP_BIT);

    //MSS_UART_set_rx_handler( &g_mss_uart1, uart1_rx_handler, MSS_UART_FIFO_SINGLE_BYTE );

	initMotor();
	i = 0;
	while( 1 )
	{
		//printf("begin of new loop\n");
		//setMotorAPB(rx_buff);
		i++;
		if(i > MAX_COUNT) {
			initMotor();
			for(i = 0; i < 6; i++) {
				rx_buff[i] = 128;
			}
		}
	}
}
